<h1>Your "<%= @list.name %>" List:</h1>
<ol>
  <% @list.bookmarks.each do |bookmark|%>
    <li>
      <div>
         <%= bookmark.movie.title %>, (<%= bookmark.comment %>)
      </div>
      <div><%= image_tag  bookmark.movie.poster_url, alt: "Movie poster", width: 200 %></div>
      <%= link_to "Delete", list_bookmark_path(bookmark),
              data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
    </li>
  <%end %>
</ol>
<%= link_to "Back to all lists" , lists_path %>
<br>
<%= link_to "+Add new Bookmark to this list", new_list_bookmark_path(@list) %>
